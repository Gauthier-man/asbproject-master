{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block stylesheets %}

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
	<div class="container py-5">
		<div class="row justify-content-center">
			<div class="col-md-8 col-lg-6">
				<div class="card shadow p-4">
					<h1 class="text-center mb-1 fs-4">Inscription</h1>
					<p class="text-center text-black-50 mb-4 small">Créez votre compte client</p>

					{{ form_start(registrationForm, {'attr': {'class': ''}}) }}

					<div class="row g-3">
						<div class="col-md-6">
							{{ form_label(registrationForm.prenom, 'Prénom *', {'label_attr': {'class': 'form-label'}}) }}
							{{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control bg-light', 'placeholder': 'Text', 'required': true}}) }}
							{{ form_errors(registrationForm.prenom) }}
						</div>
						<div class="col-md-6">
							{{ form_label(registrationForm.nom, 'Nom *', {'label_attr': {'class': 'form-label'}}) }}
							{{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control bg-light', 'placeholder': 'Text', 'required': true}}) }}
							{{ form_errors(registrationForm.nom) }}
						</div>

						<div class="col-12">
							{{ form_label(registrationForm.email, 'Adresse email *', {'label_attr': {'class': 'form-label'}}) }}
							{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control bg-light', 'placeholder': 'example@email.com', 'required': true}}) }}
							{{ form_errors(registrationForm.email) }}
						</div>

						<div class="col-12">
							{{ form_label(registrationForm.plainPassword.first, 'Mot de passe *', {'label_attr': {'class': 'form-label'}}) }}
							{{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control bg-light', 'placeholder': 'Votre mot de passe', 'required': true}}) }}
							{{ form_errors(registrationForm.plainPassword.first) }}
						</div>

						<div class="col-12">
							{{ form_label(registrationForm.plainPassword.second, 'Confirmer le mot de passe *', {'label_attr': {'class': 'form-label'}}) }}
							{{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control bg-light', 'placeholder': 'Confirmer votre mot de passe', 'required': true}}) }}
							{{ form_errors(registrationForm.plainPassword.second) }}
						</div>

						<div class="col-12 d-grid">
							<button type="submit" class="btn btn-dark">Créer mon compte</button>
						</div>
					</div>

					{{ form_end(registrationForm) }}

					<div class="text-center mt-4 footer-text">
						Déjà un compte ?
						<a href="{{ path('app_login') }}">Se connecter</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
